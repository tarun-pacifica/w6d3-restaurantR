%ol#restaurants
  - @restaurants.each do |restaurant|
    %ul
      %script
        = "$(document).ready(function () {"
        = "add_marker(#{restaurant.latitude}, #{restaurant.longitude}, '#{restaurant.name}');"
        = "});"
      %li.id.invisible= restaurant.id
      %li.name= restaurant.name
      %li.cuisine= restaurant.cuisine
      %li.address= restaurant.address
      %li= button_tag 'Edit restaurant',  :class =>  'button radius success tiny edit_button'

%div#map
  %div#map_canvas

%div.row
  %div.columns.large-3
    %div.controls
      %div.new
        = button_tag 'New Restaurant', :id => 'new_restaurant', :class => 'button radius success tiny'
      %div.form.invisible
        = form_tag do
          = label_tag 'name'
          = text_field_tag 'name'
          = label_tag 'cuisine'
          = text_field_tag 'cuisine'
          = label_tag 'address'
          = text_field_tag 'address'
          = hidden_field_tag 'restaurant_id'
          = link_to('Cancel', '#', :id=>'cancel_restaurant', :class => 'button radius tiny alert')
          = submit_tag 'Create New Restaurant', :id => 'create_restaurant', :class => 'button radius tiny'
          = submit_tag 'Edit Restaurant', :id => 'update_restaurant', :class => 'button radius success tiny'
  %div.columns.large-9